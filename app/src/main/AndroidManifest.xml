<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uiassignment" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HorizontalScrollActivity"
            android:label="@string/title_activity_horizontal_scroll"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ColorButtonsActivity"
            android:label="@string/title_activity_color_buttons"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ViewPagerActivity"
            android:label="@string/title_activity_view_pager"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".DetailsViewActivity"
            android:label="@string/title_activity_details_view"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".TextViewPatternActivity"
            android:label="@string/title_activity_text_view_pattern"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
